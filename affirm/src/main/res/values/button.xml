<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="affirm_standard_button_height">56dp</dimen>
    <dimen name="affirm_raised_button_radius">@dimen/affirm_corner_radius</dimen>
    <dimen name="affirm_raised_button_side_padding">32dp</dimen>
    <dimen name="affirm_raised_button_elevation">4dp</dimen>
    <dimen name="affirm_flat_button_height">56dp</dimen>
    <dimen name="affirm_flat_button_horizontal_margin">40dp</dimen>
    <dimen name="affirm_flat_button_vertical_margin">14dp</dimen>

    <style name="AffirmButtonTheme" />

    <style name="AffirmButtonTheme.Dark">
        <item name="rippleColor">@color/affirm_white</item>
    </style>

    <style name="AffirmButtonTheme.Light">
        <item name="rippleColor">@color/affirm_black30</item>
    </style>

    <style name="AffirmButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="backgroundTintMode">multiply</item>
        <item name="android:textAppearance">@style/AffirmTitle2.SemiBold</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="AffirmButton.Flat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/affirm_flat_button_height</item>
        <item name="android:paddingLeft">@dimen/affirm_flat_button_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/affirm_flat_button_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/affirm_flat_button_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/affirm_flat_button_vertical_margin</item>
    </style>

    <style name="AffirmButton.Raised">
        <item name="android:layout_height">@dimen/affirm_standard_button_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">@dimen/affirm_raised_button_side_padding</item>
        <item name="android:paddingRight">@dimen/affirm_raised_button_side_padding</item>
        <item name="android:background">@drawable/raised_button_default</item>
        <item name="android:elevation">@dimen/affirm_raised_button_elevation</item>
    </style>

    <style name="AffirmButton.Raised.FullWidth">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/raised_button_full_width</item>
    </style>

    <style name="AffirmButton.Raised.FullWidth.Indigo">
        <item name="android:textColor">@color/affirm_white</item>
        <item name="android:background">@drawable/raised_button_full_width_indigo</item>
        <item name="android:theme">@style/AffirmButtonTheme.Light</item>
    </style>
</resources>
